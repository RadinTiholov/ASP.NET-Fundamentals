@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <h2>Create a new account</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" />
        <label asp-for="FirstName">FirstName</label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="LastName" class="form-control" />
        <label asp-for="LastName">LastName</label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" />
        <label asp-for="Email">Email</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" />
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="PasswordRepeat" type="password" class="form-control" />
        <label asp-for="PasswordRepeat">PasswordRepeat</label>
        <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Register</button>
</form>
